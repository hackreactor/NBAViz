.blue3dButton,.blue3dButton:hover 
  cursor hand
  border 0px
  background-color #3bb3e0
  padding 10px
  font-family 'Exo 2', sans-serif
  position relative
  font-size 23px
  text-decoration none
  color #fff
  background linear-gradient(bottom, rgb(44,160,202) 0%, rgb(62,184,229) 100%)
  box-shadow inset 0px 1px 0px #7fd2f1, 0px 6px 0px #156785
  border-radius 5px


.blue3dButton:active, .pressed, .pressed:hover
  color #156785
  text-shadow  0px 1px 1px rgba(255,255,255,0.3)
  background rgb(44,160,202)
  box-shadow  inset 0px 1px 0px #7fd2f1, inset 0px -1px 0px #156785
  top 5px

.small, .small:hover
  font-size 12px
  padding 5px

.blue3dButton:after
  content ''
  position absolute
  top -10px 
  bottom -10px 
  left -10px 
  right -10px 

.short, .short:hover
  font-size 12px
  padding 3px 20px 3px 20px
  line-height 12px

.btn-container 
  margin 10px 0

.btn-container .chart-select 
  margin-left 1vw

.buttonContainer
  padding 2px

.button-container
  text-align center
  margin-bottom 30px
  margin-top 20px

