.blue3dButton,.blue3dButton:hover 
  cursor hand
  border 0px
  background-color #3bb3e0
  padding 10px
  font-family 'Exo 2', sans-serif
  position relative
  font-size 23px
  text-decoration none
  color #fff
  background linear-gradient(bottom, rgb(44,160,202) 0%, rgb(62,184,229) 100%)
  box-shadow inset 0px 1px 0px #7fd2f1, 0px 6px 0px #156785
  border-radius 5px

.blue3dButton::before 
  background-color #072239
  content ""
  display block
  position absolute
  width 100%
  height 100%
  padding-left 2px
  padding-right 2px
  padding-bottom 4px
  left -2px
  top 5px
  z-index -1
  border-radius 6px
  box-shadow 0px 1px 0px #fff


.blue3dButton:active 
  color #156785
  text-shadow  0px 1px 1px rgba(255,255,255,0.3)
  background rgb(44,160,202)
  box-shadow  inset 0px 1px 0px #7fd2f1, inset 0px -1px 0px #156785
  top 7px


.blue3dButton:active::before 
  top -2px


.small, .small:hover
  font-size 12px
  padding 5px


.btn-container 
  margin 10px 0

.btn-container .chart-select 
  margin-left 1vw

.buttonContainer
  padding 2px

.button-container
  text-align center
  margin-bottom 30px
  margin-top 20px

